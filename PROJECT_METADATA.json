    "architecture": {
        "pattern": "microservices",
        "components": {
            "firecrawl_observer": {
                "type": "core_service",
                "description": "智能内容监控系统",
                "file": "src/firecrawl_observer.py"
            },
            "task_scheduler": {
                "type": "core_service",
                "description": "任务调度管理",
                "file": "src/task_scheduler.py"
            },
            "data_processor": {
                "type": "core_service",
                "description": "数据处理转换",
                "file": "src/data_processor.py"
            },
            "api_integration": {
                "type": "core_service",
                "description": "火鸟门户API集成",
                "file": "src/api_integration.py"
            },
            "database_models": {
                "type": "data_layer",
                "description": "数据库模型定义",
                "file": "src/database_models.py"
            },
            "api_server": {
                "type": "web_service",
                "description": "FastAPI服务器",
                "file": "src/api_server.py"
            }
        }
    },
